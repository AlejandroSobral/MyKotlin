<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserDdetailFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/txtUserDetailText"
        android:layout_width="224dp"
        android:layout_height="29dp"
        android:text="Current User Details"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        tools:text="Current User Details" />

    <TextView
        android:id="@+id/txtUserLastNameDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Last Name: @{currentUser?.lastname}"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/txtUserEmailDetail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtUserNameDetail"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/txtUserEmailDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Email: @{currentUser?.email}"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtUserLastNameDetail"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/txtUserNameDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UserName: @{currentUser?.name}"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/txtUserLastNameDetail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.5" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="62dp"
        android:layout_height="49dp"
        android:src="@android:drawable/ic_dialog_info"
        app:layout_constraintBottom_toTopOf="@+id/txtUserNameDetail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtUserDetailText"
        app:layout_constraintVertical_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>