<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center"
    tools:context=".fragments.ClubDDetail">

    <ImageView
        android:id="@+id/imgDetailClub"
        android:layout_width="100dp"
        android:layout_height="98dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="617dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:src="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="25dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="50dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtDetailClubName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Club"
            android:textAlignment="center"
            android:textSize="48sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDetailClubFounded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Founded"
            android:textAlignment="center"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/txtDetailClubLeague"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="League"
            android:textAlignment="center"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/txtDetailClubCountry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Country"
            android:textAlignment="center"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/txtDetailClubNick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nick"
            android:textAlignment="center"
            android:textSize="34sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>